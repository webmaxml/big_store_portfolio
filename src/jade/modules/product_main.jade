							img.product__thumb( src="img/product_item.jpg" )
						li.product__thumbwrap
							img.product__thumb( src="img/product_item.jpg" )
				.product__info
					h2.product__item-name Lorem Ipsum Text
					.product__stock-info
						.product__available
							span.product__available-text In Stock - 
							span.product__available-value 53
							span.product__available-text  available
						ul.product__rating
							li.product__rating-item
								button( type="button" data-index="1" ).product__rating-star
