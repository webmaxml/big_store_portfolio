// featured 
article.featured( data-module="featuredslider" )
	h2.featured__header
		span.featured__header-text Featured
		button.featured__btn-next( type="button" data-entity="button" data-type="next" )
			i.fa.fa-chevron-right.featured__header-icon
		button.featured__btn-prev( type="button" data-entity="button" data-type="prev" )
			i.fa.fa-chevron-left.featured__header-icon
	ul.featured__content.owl-carousel( data-entity="slider" )
		li.featured__item
			a.featured__link( href="product.html" )
				img.featured__img( src="img/featured_item.jpg" alt="featured_item" )
			.featured__info
				.featured__about
					h3.featured__item-name 
						a.featured__link( href="product.html" ) Herbal Sport
					.featured__current-price
						span.featured__currency( data-module="currency" )
						span.featured__current-value( data-module="price" ) 101.88
					.featured__old-price
						span.featured__currency( data-module="currency" )
						span.featured__old-value( data-module="price" ) 69.99
